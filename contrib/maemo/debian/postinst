#!/bin/sh 
# postinst script for gpsdrive
#
# see: dh_installdeb(1)

set -e

case "$1" in
    configure)

        ln -s /usr/share/applications/hildon/gpsdrive.desktop /etc/others-menu/0010_gpsdrive.desktop
        . /usr/share/debconf/confmodule

	# More things we could add here:
	#   - Ask about downloading planet.osm once
	#   - Ask about a crontab entry for regularly downloading planet.osm
	#   - ask for an optional area of planet.osm to import
	#   - Ask about installing current mapnik data: planet.sql, shapefiles
	#   - Ask about downloading maps arround your current gps position

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
